.main{
  padding: 10rpx;
  color: #666
}
/* video info */
.video_info{
  margin-top: 10rpx
}
.video_info video{
  width: 100%;
}
.video_title{
  display: flex;
  justify-content: space-between;
  font-size: 35rpx
}
.video_detail{
  margin-top: 5rpx;
  font-size: 28rpx;
}
.video_detail text{
  margin-left: 15rpx
}
.video_detail .author{
  color: #000;
  margin-left: 0rpx
}

/* other video */
.other_list{
  margin-top: 10rpx
}
.item_others{
  display: flex;
  justify-content: space-between;
  margin-bottom: 15rpx
}
.other_img_wrap{
  width: 36%;
  display: flex;
  justify-content: center;
  align-items: center
}
.other_img_wrap image{
  width: 90%;
  border-radius: 10rpx
}
.other_info{
  width: 60%;
  display: flex;
  flex-direction: column;
  justify-content: space-around
}
.other_info .other_title{
  font-size: 30rpx;
  color: #e06f93
}
.other_info .other_detail{
  font-size: 26rpx;
  color:#666;
}
